<script>
	(function() {
		var block = "network-type-selector", types = ["irc", "twitch"];

		var c = function(className) {
			return document.getElementsByClassName(className)[0];
		};

		var sub = function(className) {
			return c(block + "__" + className);
		};

		var valueEl = sub("value");
		var typesEls = {};
		types.forEach(function(type) {
			typesEls[type] = sub(type);
		});

		var switcherEls = sub("switcher").querySelectorAll("a");

		switcherEls.forEach(function(el) {
			el.addEventListener("click", function(evt) {
				var target = evt.target;
				var selectedType;
				target.classList.forEach(function(cn) {
					if (types.indexOf(cn) >= 0) {
						selectedType = cn;
					}
				});

				if (selectedType) {
					valueEl.value = selectedType;
					switcherEls.forEach(function(el) {
						el.classList.remove("selected");
					});
					target.classList.add("selected");
					types.forEach(function(type) {
						var typeEl = typesEls[type];
						if (typeEl) {
							typeEl.style.display =
								(type === selectedType) ? "block" : "none";
						}
					});
				}
			});
		});

	})();
</script>
